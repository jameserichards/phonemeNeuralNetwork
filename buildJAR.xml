<?xml version='1.0'?>
<project name="speech" default="jar" basedir=".">

	<!-- set global properties for this build -->
	<property name="name" value="speech"/>
	<property name="package" value="*"/>
	<property name="jarname" value="${name}.jar"/>
	<property name="src" value="src"/>
	<property name="build" value="bin"/>
	<property name="dest" value="dest"/>
	<property name="lib" value="lib"/>
	<property  name="libfiles" value="lib/audioServers.jar lib/rasmusdsp.jar lib/toot-r2.jar lib/frinika.jar"/>
	<!-- all jar-files used by speech -->


	<property name="classpath" value="audioServers.jar  rasmusdsp.jar toot-r2.jar frinika.jar"  />
	<property name="javaversion" value="1.6" />



	<target name="compile">
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}">
			<classpath>
				<pathelement path="${classpath}" />
				<pathelement path="lib/audioServers.jar:lib/rasmusdsp.jar:lib/toot-r2.jar:lib/frinika.jar"/>
			</classpath>

		</javac>
	</target>


	<!-- make a jar file -->
	<target name="jar" depends="compile">
		<!--copy todir="${build}">
	<fileset dir="lib" />
      </copy-->
		<copy todir="${build}/imagefiles">
			<fileset dir="${src}/imagefiles"/>
		</copy>
		<copy todir="${build}/textfiles">
			<fileset dir="${src}/textfiles"/>
		</copy>
		<copy todir="${build}/config">
			<fileset dir="${src}/config"/>
		</copy>

		<copy todir="${dest}">
			<fileset dir="lib"/>
		</copy>

		<copy todir="${dest}" file="SpeechApplet.html"/>
		


		<!---copy todir="${build}">
            <fileset dir="${src}">
                <include name="*.properties"/>
            </fileset>
        </copy>

        <copy file="${src}/COPYING" todir="${build}"/-->

		<jar jarfile="${dest}/${jarname}" basedir="${build}">
			<manifest>
				<attribute name="Main-Class" value="PJL_MainApp"/>
				<attribute name="Sealed" value="false" />
				<attribute name="Class-Path" value="${classpath}" />
			</manifest>
		</jar>
	</target>


	<target name="install" depends="jar">

		<copy todir="web">
			<fileset dir="lib">
				<include name="*.jar"/>
			</fileset>
		</copy>

		<copy todir="web" file="${jarname}"/>

		<copy todir="${dst}">
			<fileset dir="web">
				<include name="*"/>
			</fileset>
		</copy>

	</target>

	<target name="-post-jar">

		<exec  dir="." executable="jarsigner">

			<arg line="-keystore /home/scott/NetBeansProjects/rigdata/keystore/drmstore -storepass somepassword -signedjar srigdata.jar rigdata.jar someAlias"/>

		</exec>

	</target>


</project>

